@{
    ViewBag.Title = "Dashboard | Simple Invoice System";
}

<main>
    <section class="jumbotron text-center bg-light p-5" aria-labelledby="appTitle">
        <h1 id="appTitle" class="display-4">Invoice System Dashboard</h1>
        <p class="lead">Welcome, Manage Products, Customers, and Invoicing Records efficiently.</p>

    </section>

    <hr />

    <h2 class="text-center mb-4">Core Application Tasks</h2>

    <div class="row text-center">

        <section class="col-md-4 mb-4" aria-labelledby="customerTitle">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 id="customerTitle" class="card-title text-primary">1. Create Customer</h3>
                    <p class="card-text">Add new customer details with required validation.</p>
                    <p>
                        @Html.ActionLink("Add New Customer", "Create", "Customer", null, new { @class = "btn btn-outline-primary" })
                    </p>
                </div>
            </div>
        </section>

        <section class="col-md-4 mb-4" aria-labelledby="productTitle">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 id="productTitle" class="card-title text-success">2. Create Product</h3>
                    <p class="card-text">Define products and set their unit prices.</p>
                    <p>
                        @Html.ActionLink("Add New Product", "Create", "Product", null, new { @class = "btn btn-outline-success" })
                    </p>
                </div>
            </div>
        </section>

        <section class="col-md-4 mb-4" aria-labelledby="invoiceTitle">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 id="invoiceTitle" class="card-title text-warning">3. Sell & Invoice</h3>
                    <p class="card-text">Generate a new invoice by selling products to a customer.</p>
                    <p>
                        @Html.ActionLink("Create New Invoice", "Create", "Invoice", null, new { @class = "btn btn-warning" })
                    </p>
                </div>
            </div>
        </section>

        <section class="col-md-4 offset-md-4 mb-4" aria-labelledby="listTitle">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 id="listTitle" class="card-title text-info">4. View Invoice History</h3>
                    <p class="card-text">Search and view all generated invoices (Customer-wise filter).</p>
                    <p>
                        @Html.ActionLink("View Invoice List", "List", "Invoice", null, new { @class = "btn btn-outline-info" })
                    </p>
                </div>
            </div>
        </section>
    </div>
</main>