@{
    ViewBag.Title = "Invoice Report";
    int invoiceId = (int)ViewBag.InvoiceID;
}

<h2>Invoice No: @invoiceId</h2>
<hr />


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["SuccessMessage"]
        <br />
        You can now generate the report for this invoice.
    </div>
}

<h3>Invoice Details Report</h3>

<div id="ReportContainer" style="border: 1px solid #ddd; padding: 15px; min-height: 500px;">

    <iframe src="/Reports/ReportHost.aspx?id=@invoiceId"
            style="width: 100%; height: 800px; border: none;">
    </iframe>

</div>

<hr />

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Go to Invoice List", "List", "Invoice", null, new { @class = "btn btn-info" })
        @Html.ActionLink("Create New Invoice", "Create", "Invoice", null, new { @class = "btn btn-primary" })
    </div>
</div>