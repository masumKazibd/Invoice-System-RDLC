@model InvoiceSystem_SP.Models.Product

@{
    ViewBag.Title = "Create New Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-success text-white border-0 rounded-top-3">
                    <h4 class="mb-0">Create New Product</h4>
                    <small class="d-block mt-1 text-light opacity-75">
                        Add products that you can later use in invoices.
                    </small>
                </div>

                <div class="card-body p-4">
                    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { id = "productForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Name, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(model => model.Name, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control",
                                    id = "txtName",
                                    placeholder = "e.g. Laptop, Mouse, Service Package"
                                }
                            })
                            <span id="nameError" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Price, new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(model => model.Price, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control",
                                    id = "txtPrice",
                                    placeholder = "e.g. 1200.00",
                                    type = "number",
                                    step = "0.01",
                                    min = "0"
                                }
                            })
                            <span id="priceError" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                ← Back
                            </a>

                            <button type="submit" class="btn btn-success px-4">
                                Create Product
                            </button>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#productForm').submit(function (e) {

                var isValid = true;

                $('.text-danger').text('');

                if ($('#txtName').val().trim() === '') {
                    $('#nameError').text('Product Name is required.');
                    isValid = false;
                }

                var price = $('#txtPrice').val().trim();

                if (price === '') {
                    $('#priceError').text('Price is required.');
                    isValid = false;
                } else if (isNaN(price) || parseFloat(price) <= 0) {
                    $('#priceError').text('Please enter a valid price (must be a positive number).');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
